    "version": "0.2.0",
    "configurations": [
        {
            "name": "mingw32-make.exe - 生成和调试活动文件",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/../bin/${fileBasenameNoExtension}.exe",
            // "program": "${workspaceFolder}/bin/shader_toy.exe",
            "args": ["-DDEBUG=ON"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/app",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}